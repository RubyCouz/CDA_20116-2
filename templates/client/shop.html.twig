{% extends 'base_profil.html.twig' %}

{% block body %}
    <section class="col-9 my-2">
    <h2 class="text-center my-5">Mes Commandes</h2>
    <div class="row shop-tracking-status">
        <div class="col-md-12">
            <h4>Status de ma commande:</h4>
            <ul class="list-group">
                <li class="list-group-item">
                    <span class="prefix">Numéro de la commande:</span>
                    <span class="label label-success">{{ commande.id }}</span>
                </li>
                <li class="list-group-item">
                    <span class="prefix">Date de création:</span>
                    <span class="label label-success">{{ commande.dateCommande ? commande.dateCommande|date('d/m/Y') : '' }}</span>
                </li>
            </ul>
            <div class="order-status">
                <div class="order-status-timeline">
                    <div class="order-status-timeline-completion c3"></div>
                </div>
                <div class="image-order-status image-order-status-new active img-circle">
                    <span class="status text-center">Accepté</span>
                    <div class="icon"></div>
                </div>
                <div class="image-order-status image-order-status-active active img-circle">
                    <span class="status text-center">En préparation</span>
                    <div class="icon"></div>
                </div>
                <div class="image-order-status image-order-status-intransit active img-circle">
                    <span class="status text-center">Envoyé</span>
                    <div class="icon"></div>
                </div>
                <div class="image-order-status image-order-status-delivered active img-circle">
                    <span class="status text-center">Délivré</span>
                    <div class="icon"></div>
                </div>
                <div class="image-order-status image-order-status-completed active img-circle">
                    <span class="status text-center">Validé</span>
                    <div class="icon"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}